<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Halaman_About">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#461AFF"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#fff"
            android:textSize="25dp"
            android:fontFamily="@font/lato_bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tittle_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#fff"
            android:textSize="25dp"
            android:fontFamily="@font/lato_bold"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/title_3ka05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3KA05"
            android:textColor="#fff"
            android:textSize="25dp"
            android:fontFamily="@font/lato_bold"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JOB DESK"
                android:textSize="30dp"
                android:textColor="#000000"
                android:gravity="center"
                android:fontFamily="@font/lato_bold"
                android:layout_marginBottom="32dp"
                android:id="@+id/job_desk"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Abdan. A : Frontend"
                android:textSize="20dp"
                android:fontFamily="@font/lato_bold"
                android:background="@drawable/button_box_biru"
                android:padding="8dp"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:id="@+id/choice1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Adam. A : Design"
                android:textSize="20dp"
                android:fontFamily="@font/lato_bold"
                android:background="@drawable/button_box_biru"
                android:padding="8dp"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:id="@+id/choice2"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Faris.A.P : Prototype"
                android:textSize="20dp"
                android:fontFamily="@font/lato_bold"
                android:background="@drawable/button_box_biru"
                android:padding="8dp"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:id="@+id/choice3"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Ikhsan. C : Backend"
                android:textSize="20dp"
                android:fontFamily="@font/lato_bold"
                android:background="@drawable/button_box_biru"
                android:padding="8dp"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:id="@+id/choice4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Langgeng.A.D : Makalah"
                android:textSize="20dp"
                android:fontFamily="@font/lato_bold"
                android:background="@drawable/button_box_biru"
                android:padding="8dp"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:id="@+id/choice5"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Zahrah : Makalah"
                android:textSize="20dp"
                android:fontFamily="@font/lato_bold"
                android:background="@drawable/button_box_biru"
                android:padding="8dp"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:id="@+id/choice6"/>




        </LinearLayout>


    </LinearLayout>



</RelativeLayout>