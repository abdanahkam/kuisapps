<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Halaman_High_score">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#461AFF"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/titlekuisapps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuis Apps"
            android:textColor="#fff"
            android:textSize="25dp"
            android:fontFamily="@font/lato_bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:gravity="center_horizontal"
                android:background="@drawable/box_merah_score"
                android:layout_marginTop="28dp">

                <TextView
                    android:id="@+id/your_score"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:textSize="24dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_bold"
                    android:text="Your Score : 0"
                    android:gravity="center"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:gravity="center_horizontal"
                android:background="@drawable/button_box_biru"
                android:layout_marginTop="28dp">

                <TextView
                    android:id="@+id/high_score"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:textSize="24dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_bold"
                    android:text="High Score : 0"
                    android:gravity="center" />

            </RelativeLayout>

            <Button
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Coba Lagi"
                android:textSize="20dp"
                android:fontFamily="@font/lato_bold"
                android:background="@drawable/box_pilih_materi"
                android:padding="8dp"
                android:layout_marginTop="42dp"
                android:layout_marginBottom="42dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:id="@+id/cobalagi"/>

            <Button
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Exit"
                android:textSize="20dp"
                android:fontFamily="@font/lato_bold"
                android:background="@drawable/box_pilih_materi"
                android:padding="8dp"
                android:layout_marginBottom="42dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:id="@+id/exit"/>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>