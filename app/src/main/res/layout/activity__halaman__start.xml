<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Halaman_Start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#461AFF"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/titlekuisapps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuis Apps"
            android:textColor="#fff"
            android:textSize="35dp"
            android:fontFamily="@font/muli_bold"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:gravity="center">

            <Button
                android:layout_width="325dp"
                android:layout_height="58dp"
                android:background="@drawable/box_pilih_materi"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:text="Belajar Pemrograman"
                android:textColor="#fff"
                android:fontFamily="@font/lato_bold"
                android:textSize="23sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_web"
                android:layout_marginBottom="48dp"/>

            <Button
                android:id="@+id/btn_start"
                android:layout_width="150dp"
                android:layout_height="81dp"
                android:background="@drawable/box_start"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:text="START"
                android:textColor="#fff"
                android:fontFamily="@font/lato_bold"
                android:textSize="25sp"
                />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="vertical">

        <Button
            android:id="@+id/about"
            android:layout_width="56dp"
            android:layout_height="75dp"
            android:background="@drawable/button_circle_about"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:text="!"
            android:textColor="#fff"
            android:textSize="52dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:fontFamily="@font/lato_bold"/>
    </LinearLayout>
</RelativeLayout>